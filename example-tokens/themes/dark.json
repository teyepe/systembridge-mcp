{
  "semantic": {
    "color": {
      "$type": "color",
      "$description": "Dark theme overrides â€” tokens that change between light and dark",

      "text": {
        "primary": {
          "$value": "{color.gray.100}",
          "$description": "Primary text on dark backgrounds",
          "$extensions": {
            "com.systembridge-mcp.conditions": [
              {
                "when": [{ "dimension": "color-scheme", "value": "dark" }],
                "value": "{color.gray.100}"
              }
            ]
          }
        },
        "secondary": {
          "$value": "{color.gray.400}",
          "$extensions": {
            "com.systembridge-mcp.conditions": [
              {
                "when": [{ "dimension": "color-scheme", "value": "dark" }],
                "value": "{color.gray.400}"
              }
            ]
          }
        },
        "disabled": {
          "$value": "{color.gray.600}",
          "$extensions": {
            "com.systembridge-mcp.conditions": [
              {
                "when": [{ "dimension": "color-scheme", "value": "dark" }],
                "value": "{color.gray.600}"
              }
            ]
          }
        },
        "inverse": {
          "$value": "{color.gray.900}",
          "$extensions": {
            "com.systembridge-mcp.conditions": [
              {
                "when": [{ "dimension": "color-scheme", "value": "dark" }],
                "value": "{color.gray.900}"
              }
            ]
          }
        }
      },

      "background": {
        "primary": {
          "$value": "{color.gray.950}",
          "$description": "Main dark background",
          "$extensions": {
            "com.systembridge-mcp.conditions": [
              {
                "when": [{ "dimension": "color-scheme", "value": "dark" }],
                "value": "{color.gray.950}"
              }
            ]
          }
        },
        "secondary": {
          "$value": "{color.gray.900}",
          "$extensions": {
            "com.systembridge-mcp.conditions": [
              {
                "when": [{ "dimension": "color-scheme", "value": "dark" }],
                "value": "{color.gray.900}"
              }
            ]
          }
        },
        "tertiary": {
          "$value": "{color.gray.800}",
          "$extensions": {
            "com.systembridge-mcp.conditions": [
              {
                "when": [{ "dimension": "color-scheme", "value": "dark" }],
                "value": "{color.gray.800}"
              }
            ]
          }
        },
        "inverse": {
          "$value": "{color.white}",
          "$extensions": {
            "com.systembridge-mcp.conditions": [
              {
                "when": [{ "dimension": "color-scheme", "value": "dark" }],
                "value": "{color.white}"
              }
            ]
          }
        }
      },

      "border": {
        "default": {
          "$value": "{color.gray.700}",
          "$extensions": {
            "com.systembridge-mcp.conditions": [
              {
                "when": [{ "dimension": "color-scheme", "value": "dark" }],
                "value": "{color.gray.700}"
              }
            ]
          }
        },
        "strong": {
          "$value": "{color.gray.500}",
          "$extensions": {
            "com.systembridge-mcp.conditions": [
              {
                "when": [{ "dimension": "color-scheme", "value": "dark" }],
                "value": "{color.gray.500}"
              }
            ]
          }
        }
      },

      "feedback": {
        "error": {
          "text":       { "$value": "{color.red.400}",  "$extensions": { "com.systembridge-mcp.conditions": [{ "when": [{ "dimension": "color-scheme", "value": "dark" }], "value": "{color.red.400}" }] } },
          "background": { "$value": "{color.red.950}",  "$extensions": { "com.systembridge-mcp.conditions": [{ "when": [{ "dimension": "color-scheme", "value": "dark" }], "value": "{color.red.950}" }] } },
          "border":     { "$value": "{color.red.800}",  "$extensions": { "com.systembridge-mcp.conditions": [{ "when": [{ "dimension": "color-scheme", "value": "dark" }], "value": "{color.red.800}" }] } }
        },
        "success": {
          "text":       { "$value": "{color.green.400}",  "$extensions": { "com.systembridge-mcp.conditions": [{ "when": [{ "dimension": "color-scheme", "value": "dark" }], "value": "{color.green.400}" }] } },
          "background": { "$value": "{color.green.950}",  "$extensions": { "com.systembridge-mcp.conditions": [{ "when": [{ "dimension": "color-scheme", "value": "dark" }], "value": "{color.green.950}" }] } },
          "border":     { "$value": "{color.green.800}",  "$extensions": { "com.systembridge-mcp.conditions": [{ "when": [{ "dimension": "color-scheme", "value": "dark" }], "value": "{color.green.800}" }] } }
        }
      }
    }
  }
}
